---
import Container from './shared/Container.astro';
import ServiceIndividual from './ServiceIndividual.astro';


import { services } from "../utils/data.ts";


type ServicesProps = {
    title: string;
    description: string;
    icon: string
};


---

<section id="services" class="py-10">
    <Container className="space-y-10 md:space-y-12">
        <div class="text-center max-w-3xl mx-auto space-y-4">
            <h2 class="relative text-4xl lg:text-6xl text-center text-blue-800 font-bold mb-10 lg:mb-20 underline-blue text-heading-1">
            Nuestros Servicios
            </h2>                
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            {
                    services.map((service: ServicesProps) => {
                    return (
                            <ServiceIndividual title={service.title} description={service.description} icon={service.icon}>
                            </ServiceIndividual>
                            );
                    })
            }
        </div>
    </Container>
</section>

